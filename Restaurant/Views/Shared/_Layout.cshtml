<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800' rel='stylesheet' type='text/css' />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div>
        <div class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="row">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <div class="col-md-3 col-sm-3 col-xs-5">
                            <a href="/" class="logo"><img src="~/Content/Images/logo.png" alt="Hot Touch" /></a>
                        </div>
                        <div class="col-md-9 col-sm-9 col-xs-12 taR">
                            <nav id="navbar" class="navbar-collapse collapse" aria-expanded="false">
                                <ul class="navigation">
                                    <li><a href="/" id="menuHome">Home</a></li>
                                    <li><a href="/Home/About" id="menuAbout">About Us</a></li>
                                    <li><a href="/Home/Menu" id="menuMenu">Menu</a></li>
                                    <li class="dropdown">
                                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" id="menuService">Service<b class="caret"></b></a>
                                        <ul class="dropdown-menu">
                                            <li><a href="/Services/Dining">Dining/Buffet</a></li>
                                            <li><a href="/Services/PartyHall">Party Hall</a></li>
                                            <li><a href="/Services/Catering">Catering</a></li>
                                        </ul>
                                    </li>
                                    <li><a href="/Cart/OrderOnlineCopy" id=" menuorder">Order Online</a></li>
                                    <li><a href="/Home/Index" id="menuTrack">Track your Order</a></li>
                                    <li><a href="/Home/Contact" id="menuContact">Reach Us</a></li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @RenderSection("banner", required: false)
        <div class="bodyContent">
            <div class="container">
                <div class="row">
                    @RenderSection("featured", required: false)
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-sm-8 col-xs-12">
                    <a href="/">Home</a> | <a href="#">Menu</a> | <a href="/Home/About">About Us</a> | <a href="/Admin/Index">Admin Login</a>
                    
                    | <a href="/Cart/Index">cart</a>
                    | <a href="/Cart/cateTemp">aray</a>
                    | <a href="/Default1/Index">deasdf</a>
                    | <a href="/Menu/Index">Menu</a>
                    <br />
                    <span>&copy; @DateTime.Now.Year - Powered By: BRASSY Techonologies (FZE), Sharjah, UAE</span>
                </div>
                <div class="col-md-4 col-sm-4 col-xs-12">
                </div>
            </div>
        </div>
    </footer>
    <p id="back-top">
        <a href="#top"><span><img src="~/Content/Images/arrow.png" alt="back to top" /></span></a>
    </p>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/jquery.isotope.js?ver=1" type="text/javascript"></script>
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
    $(document).ready(function () {
        $('#back-top').hide();
        $(window).scroll(function () {
            if ($(this).scrollTop() > 10) {
                $(".navbar-fixed-top").css("box-shadow", "0px 0px 10px rgba(0,0,0,.2)");
            }
            else {
                $(".navbar-fixed-top").css("box-shadow", "none");
            }
            if ($(this).scrollTop() > 100) {
                $('#back-top').fadeIn();

            } else {
                $('#back-top').fadeOut();
            }
        });
        // scroll body to 0px on click
        $('#back-top a').click(function () {
            $('body,html').animate({
                scrollTop: 0
            }, 800);
            return false;
        });

    });
    </script>

</body>
</html>
