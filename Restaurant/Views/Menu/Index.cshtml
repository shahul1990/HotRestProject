@using Restaurant.Models;

@model IEnumerable<Restaurant.Models.ItemCategory>


@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@foreach (var category in Model)
{
    <li>@Html.ActionLink(category.Name, "Browse", new { category = category.id })</li>
}

